@inject IWebHostEnvironment Env
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#F5F5F5" />
    <title>Landmark Analytics - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w==" />
    @if (Env.IsProduction())
    {
        <link rel="stylesheet" href="~/styles/global.min.css" asp-append-version="true" />
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-XJG5GTZFYF"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', 'G-XJG5GTZFYF');
        </script>
    }
    else
    {
        @*DEVELOPMENT ONLY*@
        <link rel="stylesheet" href="~/styles/global.css" asp-append-version="true" />
    }
</head>
<body>
    <header>
        <h1>
            <span id="header-text">Landmark Analytics</span>
            <partial name="_LandmarkLogoSvg" model='new {id="header-logo"}'>
        </h1>
        <nav id="main-navigation">
            <a asp-active-class="current" asp-page="/Index">Home</a>
            <a asp-active-class="current" asp-page="/Contact">Contact</a>
            <a asp-active-class="current" asp-page="/About">About</a>
        </nav>

    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        Copyright @DateTime.Now.Year Landmark Analytics
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!--Environment: @Env.EnvironmentName-->
</body>
</html>
