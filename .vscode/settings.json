{
  "files.exclude": {
    "**/.gitignore": true,
    "**/.gitkeep": true,
    ".editorconfig": true,
    "node_modules": true
  },
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json"
  },
  "explorer.fileNesting.expand": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
